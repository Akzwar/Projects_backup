env = Environment()
env.VariantDir( "obj", "src", dupkicate = 0 )
env.Append(CPPPATH = ['/usr/include/'])
env.Append(CPPFLAGS = '-fpermissive')
env.Append(LIBPATH = ['/usr/lib'])
env.Append(LIBS = ['GL','glut','GLU'])
sources = Glob( "obj/*cpp" )
obj_list = env.Object( source = sources )
env.Program(target = 'bin/GraphGL', source = obj_list)
